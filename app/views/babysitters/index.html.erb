<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1594639738432-ea7a76cd466c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80')">
  <div class="container text-center justify-content-center align-middle">
    <h1 class="font-weight-bold">Baba de Aluguel</h1>
  </div>
</div>
<div class="container pb-3">
  <h1 class="font-weight-bold text-center p-3 h1">Escolha sua babá</h1>
  <%= form_tag babysitters_path, method: :get, class: 'form-horizontal d-flex justify-content-end' do %>
    <%= label_tag "Classificar por:" %>
    <%= select_tag :query, raw("<option>Menor Preço</option><option>Mais tempo de Experiência</option>"),
      class: "form-control w-25"
    %>
    <% if @price %>
      <%= hidden_field_tag :price, @price.to_s %>
      <%= hidden_field_tag :skill, @skill.to_s %>
      <%= hidden_field_tag :commit, @commit.to_s %>
      <%= hidden_field_tag :experience, @experience.to_s %>
    <% end %>
    <%= submit_tag("Classificar", class: "btn text-primary") %>
  <% end %>
  <div class="row marging justify-content-between">
    <% @babysitters.each do |babysitter| %>
      <div class="col-12 col-lg-4">
        <%= link_to babysitter_path(babysitter) do %>
          <div class="card-trip">
            <%= cl_image_tag babysitter.user.photo.key %>
            <div class="card-trip-infos">
              <p>Nome: <%=babysitter.user.name%></p>
              <p>Habilidade: <%=babysitter.skill%></p>
              <p>Tempo de experiencia: <%=babysitter.experience%></p>
              <p>Price: <%=babysitter.price%></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <%= link_to "Fazer busca novamente", filter_path%>
</div>
