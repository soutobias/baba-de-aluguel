<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1594639738432-ea7a76cd466c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80')">
  <div class="container text-center justify-content-center align-middle">
    <h1 class="font-weight-bold">Baba de Aluguel</h1>
  </div>
</div>
<div class="container w-100 justify-content-center margin-top-negative">
  <div class="d-flex justify-content-between">
    <div class="m-3 show-left flex-grow-1">
      <div class="card-border p-3 h-100">
        <h3><%=@babysitter.user.name%></h3>
        <div>
          <p>Habilidade: <%=@babysitter.skill%></p>
          <p>Tempo de experiencia: <%=@babysitter.experience%></p>
          <p>Preco: <%=@babysitter.price%></p>
          <p>Local de trabalho: <%=@babysitter.user.location%></p>
        </div>
      </div>
    </div>
    <% if @babysitter.user != current_user %>
      <div>
        <h3>Agendamento</h3>
        <%= simple_form_for [ @babysitter, @service ] do |f| %>
          <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, required: true, input_html: {class: "datepicker"} %>
          <%= f.input :duration, label: 'Duração em horas:', collection: [4, 8, 12] %>
          <%= f.button :submit, label: 'Agendar serviço', class: "btn btn-primary"%>
        <% end %>
      </div>
    <% else %>
      <%= link_to "Editar meu perfil", edit_babysitter_path(@babysitter), class: "btn btn-primary"%>
      <%= link_to "Parar de oferecer meu serviço", babysitter_path(@babysitter), method: :delete, data: { confirm: "Are you sure?" }, class: "btn text-primary" %>
    <% end %>
  </div>
</div>
